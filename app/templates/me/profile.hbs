{{view App.AlertsView}}
<div class="col-md-4 col-sm-4 text-center my-profile">
		<div class="row avatar">
			<a href="#">
				{{#if imageURL}}
			  	<img {{bindAttr src="mediumImageURL"}} alt="profile image"/>
				{{else}}
					<img {{bindAttr src="defaultImageURL"}} alt="profile image"/>
				{{/if}}
			</a>
		</div>
		<div class="row">
			<h3 class="text-primary">{{username}}</h3>
			<h5 class="text-primary">{{school.name}}</h5>
		</div>
</div>
<div class="col-md-8 col-sm-8">
	<form role="form">
    <div id="name-group" class="form-group">
      <label for="name" class="control-label text-primary">Name</label>
      {{input type="text" value=name classNames="form-control input-lg" placeholder="Name" maxlength="255"}}
    </div>
    <div class="form-group">
      <label for="email" class="control-label text-primary">Email</label>
      {{input type="text" value=email classNames="form-control input-lg" placeholder="Email" disabled="true"}}
    </div>
	  <div class="form-group">
	    <label for="bio" class="control-label text-primary">Bio</label>
	    {{textarea value=bio cols="80" rows="6" classNames="form-control input-lg" maxlength="150"}}
			<p class="help-block">Describe yourself in <b>150</b> characters or less.</p>
	  </div>
    <div class="form-group">
      <label for="status" class="control-label text-primary">School Status</label>
      {{input type="text" value=schoolStatus classNames="form-control input-lg" placeholder="Status" disabled="true"}}
    </div>
    <div class="form-group">
      <label for="status" class="control-label text-primary">Graduation Year</label>
      {{input type="text" value=year classNames="form-control input-lg" placeholder="Year" maxlength="4"}}
    </div>
    <button {{bindAttr class=":btn :btn-lg :btn-primary :btn-block updating:disabled"}} type="submit" {{action "update" "profile"}}>
    {{#if updating}}
        Please Wait
    {{else}}
        Update Profile
    {{/if}}
    </button>
	</form>
</div>